<div class="row cat-bar" style="margin-left: 0px;">
    <ul class="nav nav-pills category">
        <li>
            <%= link_to items_path(:category => category.join(" ")), :remote => true, :value => category.join(" "), :style => "width: 45px; line-height: 49px;" do %>
                全部
            <% end %>
        </li>
        <% categories.each_with_index do |c, i| %>
            <% if category.include?(c) %>
            <li>
                <%= link_to items_path(:category => c), :remote => true, :value => c do %>
            		<%= image_tag(("cat_pic_#{i + 1}.png"), :size => '45x50')%>
                <% end %>
            </li>
            <% end %>
        <% end %>
    </ul>

    <ul class="nav nav-pills category" style='display:none'>
        <% categories.each_with_index do |c, i| %>
            <% if !category.include?(c) %>
            <li>
                <%= link_to "javascript: void(0);", :remote => true, :value => c, "path-cat" => items_path(:category => c), "cat-type" => "extra" do %>
                    <%= image_tag(("cat_pic_#{i + 1}.png"), :size => '45x50')%>
                <% end %>
            </li>
            <% end %>
        <% end %>
    </ul>

    <ul class="nav nav-pills category">
        <li>
            <a href="javascript: void(0);" class='exp-cat' value="expend">&gt;</a>
        </li>
    </ul>
</div>
