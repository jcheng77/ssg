<% content_for :javascripts do %>
    <script type="text/javascript">
        $(function () {
            $(".comment-block").each(function () {
                var block = this;
                $(".link-child-comments", block).click(function () {
                    $(".child-comments", block).fadeToggle("slow", "linear");
                });
            });
            <% if flash[:highlighted] %>
            var comment = $("#<%= flash[:highlighted] %>-comment");
            comment.addClass("highlighted");
            setTimeout(function () {
                comment.removeClass("highlighted");
            }, 5000);
            if (comment.hasClass("comment-sub")) {
                $("div ul a", comment.parent().prev()).first().click();
            }
            <% end %>
        });
    </script>
<% end %>

<div class="row showitem-page">
    <div class="span4">
      
      <div class="item-title" title="<%= @item.title %>"><%= image_tag([@item.source_site,'.png'].join)%><%= @item.title %></div>

        <div class="thumbnail">
             <!--    
             <div class="btn-group item_actions">
   
                <a href="#" class="btn red">愿望 <span><%= @item.in_shares_num %></span></a>
                <a href="#" class="btn yellow">推荐 <span><%= @item.in_shares_num %></span></a>
                <a href="#" class="btn blue">已购 <span><%= @item.in_bags_num %></span></a>
                
            </div>
            -->

            <div class="action-list" style="position:absolute;">
                <a href="#" >愿望 <span><%= @item.in_shares_num %></span></a>&#160;&#160;|&#160;&#160;
                <a href="#" >推荐 <span><%= @item.in_shares_num %></span></a>&#160;&#160;|&#160;&#160;
                <a href="#" >已购 <span><%= @item.in_bags_num %></span></a>
            </div>

            <%= link_to image_tag(@item.image, :width => '360'), @item.trackable_purchase_url(current_user.nil? ? nil: current_user.accounts.first.aid), {:target => '_blank'} %>
        </div>
        <div class="item-desc">
            <% unless @item.sub_shop_name.blank? %>
                <span class='item-shop'>来自:&#160;
                    <span class="item-text" title="<%= @item.sub_shop_name %>">
                        <%= link_to @item.sub_shop_name, @item.sub_shop_url, {:target => '_blank'} %>
                    </span>
                </span>
            <% end %>
            <span class='item-shopping'>
                <span class="item-price item-text"><%= number_to_currency(@item.latest_price, unit: '￥') %></span>
               
                <%= link_to image_tag(gotopic(@item.source_site)), @item.trackable_purchase_url(current_user.nil? ? nil: current_user.accounts.first.aid), {:target => '_blank'} %>
               
            </span>
        </div>

        <ul class="nav nav-pills tag-block category-tags">
            <% @item.tags_each do |t| %>
                <li class='active'>
                    <a><%= t %></a>
                </li>
            <% end %>
            <li>
                <input type="text" placeholder="添加标签...">
            </li>
        </ul>
        <!--
        <%= form_tag add_tag_item_path(@item), class: "well form-inline tag-form" do %>
            <input type="hidden" id="tags" name="tag">

            <div tabindex="0" class="tageditor" data-provide="tageditor" data-source='<%= Item.tags %>'>
                <ul class="tags">
                    <li><input type="text" style="width:30px;"/></li>
                </ul>
            </div>

            <%= submit_tag "添加标签", class: "add-tag btn btn-info" %>
            <div class="clear"></div>
        <% end %>
        -->
    </div>

    <div class="span6">
        <div class="page-header" id="comments-header"><h4>他们的评论</h4></div>
        <% @item.shares.all.desc(:created_at).each do |share| %>
            <% share.root_comments.each do |comment| %>
                <%= render :partial => "comments/comment", :object => comment %>
            <% end %>
        <% end %>
        <%= form_for @share.build_comment, url: recommend_item_path(@item), remote: true do |f| %>
            <%= f.hidden_field :user_id %>
            <%= f.hidden_field :_type %>
            <%= f.hidden_field :user_id %>
            <%= f.hidden_field :commentable_id %>
            <%= f.hidden_field :commentable_type %>
            <%= f.text_area :content, rows: 4, class: "input-xlarge", style: "width: 96%;", placeholder: "我来说两句" %>
            <div class='pull-right comment-btn'>
                <input type='checkbox'>推荐给好友</input>
                <input type='checkbox'>同步到微博</input>
                <%= f.submit "我要推荐", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
<div class="row" style="margin-top: 30px; margin-left: 0px;">
    <div class="page-header"><h4>你可能也会喜欢</h4></div>
    <ul class="thumbnails">
        <% @item.with_any_same_tags.each do |item| %>
            <% unless @item == item %>
                <%= render :partial => "items/item", :object => item, :locals => {:tags => item.tags, :share => item.root_share} %>
            <% end %>
        <% end %>
    </ul>
</div>
