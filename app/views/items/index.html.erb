<div class="row">
    <div class="span12">

        <%= render "categories/category" %>

        <% unless current_tags.blank? %>
            <div class="page-header">
                <h4>标签</h4>
                <ul class="tags">
                    <% current_tags.each do |tag| %>
                        <li class="tag" value="0">
                            <span class="uppercase">#<%= tag %></span><a title="<%= tag %>">&times;</a></li>
                    <% end %>
                </ul>
            </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $(".tags .tag a").click(function () {
                        var url = "<%= items_path %>";
                        var param = "?tag_action=delete&tag=" + encodeURIComponent($(this).attr("title"));
                        $(location).attr("href", url + param);
                    });
                });
            </script>
        <% end %>

        <!--<div class="page-header"></div>-->
        <h4 id="notice"></h4>
        <ul id="items" class="thumbnails">
            <% unless @items.blank? %>
                <% @items.each do |item| %>
                    <%= render :partial => "item", :object => item, :locals => {:tags => item.tags, :share => item.root_share} %>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>
<div id="progress" class="progress progress-info progress-striped active" style="width: 200px; margin: 15px auto; display: none;">
    <div class="bar" style="width: 100%;"></div>
</div>
<ul class="pager">
    <li><%= link_to "更多宝贝", "javascript: void(0);", :remote => true, :id => "more", :path => items_path, :cat => "", :page => 1 %></li>
</ul>
<script type="text/javascript">
    var moreBtn = $("#more");
    var noticeBar = $("#notice");
    var progressBar = $("#progress");
    var itemPanel = $("#items");

    var ItemController = {
        clearNotice:function () {
            noticeBar.empty();
        },
        clearItems:function () {
            moreBtn.removeClass("finished");
            itemPanel.empty();
        },
        appendItem:function (html) {
            itemPanel.append(html).children("li:last").hide().fadeIn(2000);
        },
        changeCategory:function (category) {
            moreBtn.attr("cat", category);
            moreBtn.attr("page", 1);
            moreBtn.show();
        },
        notFound:function () {
            this.clearItems();
            noticeBar.html("没有找到对应的宝贝。");
            moreBtn.hide();
        },
        noMore:function () {
            moreBtn.addClass("finished");
            moreBtn.hide();
        }
    };

    $(function () {
        var arrivedAtBottom = function () {
            return $(document).scrollTop() + $(window).height() == $(document).height();
        }

        $(window).scroll(function () {
            if (arrivedAtBottom()) {
                var page = parseInt(moreBtn.attr("page"));
                if (page < 5 && !moreBtn.hasClass("finished")) {
                    moreBtn.click();
                }
            }
        });

        moreBtn.click(function () {
            var page = parseInt(moreBtn.attr("page")) + 1;
            moreBtn.attr("page", page);
            var href = moreBtn.attr("path") + "?" + "category=" + moreBtn.attr("cat") + "&page=" + page;
            moreBtn.attr("href", href);
        });

        moreBtn.on("ajax:before", function () {
            progressBar.show();
        }).on("ajax:complete", function () {
            progressBar.hide();
        });
    });
</script>
