<% if !@comment.blank? && @comment.persisted? %>
$("#comments-header").after("<%= escape_javascript render(:partial => "comments/comment", :object => @comment) %>");
$("textarea").val("");
$(".comment-block").first().each(function() {
    var block = this;
    $(".link-child-comments", block).click(function() {
        $(".child-comments", block).fadeToggle("slow", "linear");
    });
});
<% else %>
alert("推荐失败！");
<% end %>