<!DOCTYPE html>
<html>
<head>
  <title>i享买</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/reset.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/960_24_col.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/text.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/ssg-common.css" type="text/css" media="screen"/>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css" type="text/css" media="screen"/>
    <%if current_page?(:controller => 'users', :action => 'dashboard') || current_page?(:controller => 'users', :action => 'my_shares')%>
      <link rel="stylesheet" href="/css/ssg-home.css" type="text/css" media="screen"/>
    <%end%>
    <%if current_page?(:controller => 'users', :action => 'my_shares') %>
      <link rel="stylesheet" href="/css/ssg-myShares.css" type="text/css" media="screen"/>
    <%end%>
    <%if current_page?(:controller => 'shares', :action => 'show') %>
      <link rel="stylesheet" href="/css/ssg-viewShare.css" type="text/css" media="screen"/>
    <%end%>
    <!-- <%=current_page?(:controller => 'items', :action => 'new')%>-->
    <%if current_page?(:controller => 'items', :action => 'new') || current_page?(:controller => 'items', :action => 'edit') %>
      <link rel="stylesheet" href="/css/ssg-createShare.css" type="text/css" media="screen"/>
    <%end%>
    
    
    <script src="/js/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="/js/jquery.easing.1.3.js" type="text/javascript"></script>
    <script src="/js/jquery.raty.min.js" type="text/javascript"></script>
    <script src="/js/ssg-1.0-common.js" type="text/javascript"></script>
    <%if current_page?(:controller => 'users', :action => 'dashboard') || current_page?(:controller => 'users', :action => 'my_shares') %>
      <script src="/js/ssg-1.0-home.js" type="text/javascript"></script>
    <%end%>
    <%if current_page?(:controller => 'users', :action => 'my_shares') %>
      <script src="/js/ssg-1.0-myShares.js" type="text/javascript"></script>
    <%end%>
    <%if current_page?(:controller => 'shares', :action => 'show') %>
      <script src="/js/ssg-1.0-viewShare.js" type="text/javascript"></script>
    <%end%>
    <%if current_page?(:controller => 'items', :action => 'new') || current_page?(:controller => 'items', :action => 'edit') %>
      <script src="/js/ssg-1.0-createShare.js" type="text/javascript"></script>
    <%end%>
</head>


<body onload="">

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">i享买</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li><%= link_to '我的首页', current_user ? dashboard_user_path(current_user) : "#" %></li>
                    <li><%= link_to '我的分享', current_user ? my_shares_user_path(current_user) : "#" %></li>
                    <li><%= link_to '用户', users_path %></li>
                    <li><%= link_to '商品', items_path %></li>
                </ul>
                <form class="navbar-search pull-left" action="">
                    <input type="text" class="search-query span2" placeholder="我感兴趣的内容或人..."/>
                </form>
              <%if current_user %>
                <ul class="nav pull-right">
                    <li><%= image_tag image_path(current_user.avatar) %></li>
                </ul>
              <%else%>
                <ul class="nav pull-right">
                    <li><a href="javascript:void(0);" id="index_login">登&nbsp;录</a></li>
                </ul>
              <%end%>
            </div>
        </div>
    </div>
</div>


  <%= yield %>


<div id="footer">
  <div class="container_24">
    <div class="clear"></div>
    <div class="grid_24 footer_content">
      <div>Copyright by i享买 2011-2012 ssg.com, all rights reserved</div>
    </div>
  </div>
</div>

</body>

</html>
