<% content_for :javascripts do %>
    <script type="text/javascript">
        $(function() {
            $(".item-block textarea").focusin(function() {
                $(this).attr("rows", 3);
            }).focusout(function() {
                $(this).attr("rows", 1);
            });
        });
    </script>
<% end %>

