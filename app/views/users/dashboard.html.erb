<div class="row main dashboard">
    <div class="span12 row userinfo">
        <div class="span3">
            <%= render :partial => "avatar", :object => @user %>
        </div>
        <div class="span7">
            <ul class='myActions nav nav-pills'>
                <li><i class='icon-heart'></i>许个愿望</li>
                <li><i class='icon-search'></i>查找好友</li>
                <li><i class='icon-user'></i>邀请好友</li>
            </ul>
            <div class='myActions-panel' style='display:none'>
                <%= render :partial => "users/myaction_wishlist" %>
                <%= render :partial => "users/myaction_finduser" %>
                <%= render :partial => "users/myaction_inviteuser" %>
            </div>
        </div>
    </div>
    <div class="span12 wishCountBar navbar">
        <ul class="nav">
         <li>
          <%=  link_to my_shares_user_path(@user) do %>
          我的收藏 <%= @user.shares.by_type(Share::TYPE_SHARE).count %>
              <% end %>
         </li>
           <li> <%=  link_to my_wishes_user_path(@user) do %>
          我的新愿望 <%= @user.shares.by_type(Share::TYPE_WISH).count %>
          <% end %>
            </li>
         <li>
          <%=  link_to my_bags_user_path(@user) do %>
            我实现的愿望 <%= @user.shares.by_type(Share::TYPE_BAG).count %>
          <% end %>
         </li>

        </ul>
        <ul class="nav">
            <li>
              <%=  link_to '热门愿望', promote_shares_user_path(@user) %>
                  </li>
            <li>
              <%= link_to '好友动态', dashboard_user_path(@user) %> </li>
            <li><%= link_to '二级好友动态', cycle_shares_user_path(@user)  %></li>
        </ul>
    </div>
    <div class="span12 row">
        <% @shares.each do |share| %>
            <%= render :partial => "shares/share", :object => share %>
        <% end %>
        
    </div>
    <div class="span12 ">
        <%= bootstrap_will_paginate @shares %>
    </div>
</div>