<% content_for :javascripts do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.item_block .item_left').mouseover(
                    function () {
                        $(this).find('.item_actions').css('display', 'block');
                    }).mouseout(function () {
                        $(this).find('.item_actions').css('display', 'none');
                    });
        });
    </script>
<% end %>
<div class="row main dashboard">
    <div class="span2">
        <%= render :partial => "avatar", :object => @user %>
        <ul class="nav nav-pills nav-stacked sidebars" style="margin-top: 15px;">
            <li class="active"><%= link_to "我的关注", dashboard_user_path(current_user) %></li>
            <li><%= link_to "我的分享", my_shares_user_path(current_user) %></li>
            <li><%= link_to "我的愿望", my_wishes_user_path(current_user) %></li>
            <li><%= link_to "我的背包", my_bags_user_path(current_user) %></li>
        </ul>
    </div>
    <div class="span8">


        <div class="page-header"><h4>分享</h4></div>
        <div class="row" style="margin-left: 0px;">
            <% @shares.each do |share| %>
                <%= render :partial => "shares/share", :object => share %>
            <% end %>
        </div>
    </div>
</div>
