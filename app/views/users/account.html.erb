<script>
$(document).ready(function(){
   $('.item_block .item_left').mouseover(function(){
      $(this).find('.item_actions').css('display', 'block');
   }).mouseout(function(){
      $(this).find('.item_actions').css('display', 'none');
   });
});
</script>
<div class="row dashboard">
    <div class="span2">
        <%= render :partial => "avatar", :object => @user %>
        <ul class="nav nav-pills nav-stacked sidebars" style="margin-top: 15px;">
            <li class="active"><%= link_to "我的分享", dashboard_user_path(current_user) %></li>
            <li><%= link_to "我的愿望清单", my_shares_user_path(current_user) %></li>
            <li><a href="#">我的背包</a></li>
        </ul>
    </div>
    <div class="span9">


        <ul class="thumbnails">
            <%binding.pry%>
            <% @user.recent_shares.each do |share| %>
                <%= render :partial => "items/item", :object => share.item %>
            <% end %>
        </ul>
    </div>
</div>
