<div class="thumbnail row friend-block">
    <%= image_tag small_avatar_url(summary.avatar), :width => '50', class: "pull-left" %>
    <div class="pull-right friend-info">
        <h5><%= link_to summary.nick_name, account_user_path(summary) %></h5>
        <ul>
            <li>未实现 <%= summary.shares.by_type(Share::TYPE_WISH).size %></li>
            <li>推荐 <%= summary.shares.by_type(Share::TYPE_SHARE).size %></li>
            <li>已实现 <%= summary.shares.by_type(Share::TYPE_BAG).size %></li>
        </ul>
        <ul class="images-list">
            <% if summary.shares.count == 0 %>
                <p class="text-info">这位亲还没有任何愿望哦</p>
            <% else %>
                <% summary.shares.desc(:created_at).limit(6).each do |share| %>
                    <li>
                        <%= link_to share do %>
                            <%= image_tag share.item.image %>
                        <% end %>
                    </li>
                <% end %>
            <% end -%>
        </ul>
    </div>
</div>
