<% content_for :javascripts do %>
    <script type="text/javascript">
        $(function () {
            $(".item-block textarea").focusin(
                    function () {
                        $(this).attr("rows", 3);
                    }).focusout(function () {
                        $(this).attr("rows", 1);
                    });
        });
    </script>
<% end %>

<div class="row main">
    <div class="span2">
        <%= render :partial => "avatar", :object => @user %>
        <%= render :partial => "links"  %>
    </div>
    <div class="span8">
        <div class="page-header"><h4>我的愿望</h4></div>
        <div class="row" style="margin-left: 0px;">
            <% @user.wishes.desc(:created_at).each do |wish| %>
                <%= render :partial => "shares/share", :object => wish %>
            <% end %>
        </div>
    </div>
</div>
