<div style="margin-left: auto; margin-right: auto; width: 620px; margin-bottom: 25px;">
    <ul class="breadcrumb">
        <li><a href="#">第1步：使用微博帐号注册</a></li>
        <li><a class="active" href="#">第2步：设置/完善您的帐号信息</a></li>
        <li><a href="#">第3步：设置您的偏好</a></li>
    </ul>
</div>
<div class="row signup">
    <%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
        <fieldset>
            <div class="control-group">
                <%= f.label :nick_name, '昵称', :class => "control-label" %>

                <div class="controls">
                    <%= f.text_field :nick_name, :value => @user.accounts.last.nick_name, :class => "input-medium focused" %>
                </div>
            </div>
            <div class="control-group">
                <%= f.label :email, '邮箱', :class => "control-label" %>

                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-envelope"></i></span><%= f.text_field :email, :class => "input-large" %>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <%= f.label :password, '密码', :class => "control-label" %>

                <div class="controls">
                    <%= f.password_field :password, :class => "input-medium focused" %>
                </div>
            </div>
            <% if @user.avatar.nil? %>
                <%= hidden_field_tag "user[avatar]", @user.accounts.last.avatar %>
            <% end %>
            <div class="form-actions">
                <%= f.submit "完成", :class => "btn btn-primary" %>
            </div>
        </fieldset>
    <% end %>
</div>
