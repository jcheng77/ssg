<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
  <%= f.label :email %><div class='input'><%= f.email_field :email %></div>

  <%= f.label :password %><div class='input'><%= f.password_field :password %></div>

  <%= f.label :password_confirmation %><div class='input'><%= f.password_field :password_confirmation %></div>
  </fieldset>

  <div><%= f.submit "Sign up",  :class=>'btn primary'%></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
